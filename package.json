{
  "name": "@state-of-geneva/rapports-bdd",
  "version": "1.0.12",
  "type": "module",
  "bin": {
    "rapports-bdd": "bin/rapports-bdd.js"
  },
  "files": [
    "bin",
    "scripts",
    "src",
    "index.html",
    "404.html",
    "vite.config.ts",
    "tsconfig.json",
    "tsconfig.app.json",
    "tsconfig.node.json"
  ],
  "license": "CC-BY-4.0",
  "description": "CLI + Vue app to render Gherkin .feature files as browsable reports (library only, no features inside)",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run generate && npm run build-only && node scripts/postBuildCopy404.js",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "generate": "node scripts/generateFeatureFiles.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@cucumber/cucumber-json-converter": "^0.1.0",
    "@cucumber/gherkin": "^28.0.0",
    "@primevue/themes": "^4.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.0.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "vite": "^5.3.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vue-tsc": "^2.0.21"
  }
}
